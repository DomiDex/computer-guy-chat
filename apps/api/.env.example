# Database
DATABASE_URL="postgresql://user:password@localhost:5432/computer_guys_chatbot?schema=public"

# JWT Secrets
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"

# API Configuration
PORT=3000
NODE_ENV=development
API_URL=http://localhost:3000

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM="Computer Guys Support <support@computerguys.com>"

# Redis (Upstash)
REDIS_URL=redis://default:password@localhost:6379
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# Convex
CONVEX_DEPLOYMENT=your-deployment
CONVEX_URL=https://your-deployment.convex.cloud

# OpenRouter AI
OPENROUTER_API_KEY=sk-or-v1-your-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=20

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3001

# Monitoring (optional)
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=

# Support
SUPPORT_EMAIL=support@computerguys.com
SUPPORT_PHONE=1800-COMP-GUYS