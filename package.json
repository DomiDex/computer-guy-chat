{
  "name": "computer-guys-chatbot",
  "version": "1.0.0",
  "private": true,
  "description": "Customer service chatbot for Computer Guys with secure authentication and RAG capabilities",
  "author": "Computer Guys Development Team",
  "license": "PROPRIETARY",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.15.0"
  },
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@cg/api",
    "dev:web": "turbo run dev --filter=@cg/web",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "test:security": "turbo run test:security",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:reset": "turbo run db:reset",
    "docker:build": "docker compose -f docker/docker-compose.yml build",
    "docker:up": "docker compose -f docker/docker-compose.yml up",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "ci": "pnpm install --frozen-lockfile && pnpm build && pnpm test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  }
}